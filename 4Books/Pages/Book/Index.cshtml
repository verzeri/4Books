                                <!-- I suggerimenti verranno caricati dinamicamente -->
                                <div class="text-center w-100 py-3 loading-placeholder">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">Caricamento...</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    /* Stili specifici per la pagina di ricerca */
    .book-search-page {
        background-color: var(--light-bg);
        min-height: calc(100vh - 300px);
    }

    .text-gradient {
        background: linear-gradient(45deg, var(--primary-color), var(--accent-color));
        -webkit-background-clip: text;
        background-clip: text;
        color: transparent;
        display: inline-block;
    }

    .search-card {
        border-radius: 15px;
        border: none;
        overflow: hidden;
        transition: all 0.3s ease;
    }

        .search-card:hover {
            transform: translateY(-5px);
        }

    .search-box .input-group {
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
        border-radius: 50px;
        overflow: hidden;
    }

    .search-box .form-control {
        border-radius: 0 50px 50px 0;
        height: 60px;
        font-size: 1.1rem;
    }

    .search-box .input-group-text {
        border-radius: 50px 0 0 50px;
        font-size: 1.2rem;
    }

    .btn-primary {
        border-radius: 50px;
        padding: 12px 30px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

    /* Stili per categorie */
    .category-card {
        text-decoration: none;
        color: inherit;
        display: block;
    }

    .category-item {
        border-radius: 15px;
        transition: all 0.3s ease;
        border: none;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }

        .category-item:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        .category-item i {
            color: var(--accent-color);
        }

    /* Stili per suggerimenti */
    .reading-suggestions {
        border-radius: 15px;
        border: none;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    }

    .suggestions-scroller {
        -ms-overflow-style: none;
        scrollbar-width: none;
    }

        .suggestions-scroller::-webkit-scrollbar {
            display: none;
        }

    .suggestion-item {
        min-width: 140px;
        margin-right: 20px;
        text-align: center;
        transition: transform 0.3s ease;
        cursor: pointer;
    }

        .suggestion-item:hover {
            transform: translateY(-5px);
        }

        .suggestion-item img {
            height: 180px;
            object-fit: cover;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        }

    /* Animazioni */
    @@keyframes fadeIn {
        from {
            opacity: 0;
        }

        to {
            opacity: 1;
        }
    }

    @@keyframes slideUp {
        from {
            transform: translateY(30px);
            opacity: 0;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    @@keyframes float {
        0% {
            transform: translateY(0px);
        }

        50% {
            transform: translateY(-10px);
        }

        100% {
            transform: translateY(0px);
        }
    }

    .fade-in {
        animation: fadeIn 1s ease forwards;
    }

    .slide-up {
        animation: slideUp 0.8s ease forwards;
    }

    .delay-1 {
        animation-delay: 0.2s;
        opacity: 0;
        animation-fill-mode: forwards;
    }

    .delay-2 {
        animation-delay: 0.4s;
        opacity: 0;
        animation-fill-mode: forwards;
    }

    .delay-3 {
        animation-delay: 0.6s;
        opacity: 0;
        animation-fill-mode: forwards;
    }

    .book-animation {
        font-size: 2.5rem;
        display: inline-block;
        animation: float 3s ease-in-out infinite;
    }
    /* Stili migliorati per le copertine dei libri */
    .suggestion-item img {
        height: 180px;
        width: 120px;
        object-fit: cover;
        box-shadow: 0 3px 8px rgba(0,0,0,0.15);
        transition: transform 0.3s ease;
        border-radius: 4px;
    }

    .suggestion-item:hover img {
        transform: translateY(-5px);
    }

    .suggestion-item h6 {
        margin-top: 8px;
        font-size: 0.95rem;
        max-width: 120px;
        white-space: normal;
    }
</style>

