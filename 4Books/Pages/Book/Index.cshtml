            const searchHistory = JSON.parse(localStorage.getItem('searchHistory') || '[]');
            const categoryHistory = JSON.parse(localStorage.getItem('categoryHistory') || '[]');
            const authorHistory = JSON.parse(localStorage.getItem('authorHistory') || '[]');

